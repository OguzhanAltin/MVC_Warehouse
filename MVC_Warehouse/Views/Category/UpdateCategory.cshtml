
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_MasterLayoutPage.cshtml";
}

@model MVC_Warehouse.Models.DTO.CategoryDTO

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">Update Category</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Category</h3>
                </div>
                <form role="form" action="/Category/UpdateCategory" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Category Name</label>
                            <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control" placeholder="Category Name">
                        </div>
                        <div class="form-group">
                            <label>Category Description</label>
                            <input type="text" name="CategoryDescription" value="@Model.CategoryDescription" class="form-control" placeholder="Category Description">
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

