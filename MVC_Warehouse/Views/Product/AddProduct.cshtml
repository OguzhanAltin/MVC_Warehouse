
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_MasterLayoutPage.cshtml";
}

@model List<MVC_Warehouse.DAL.ORM.Entity.Category>

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">Add Product</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Product</h3>
                </div>
                <form role="form" action="/Product/AddProduct" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Product Name</label>
                            <input type="text" name="ProductName" class="form-control" placeholder="Product Name">
                        </div>
                        <div class="form-group">
                            <label>Product Description</label>
                            <input type="text" name="ProductDescription" class="form-control" placeholder="Product Description">
                        </div>
                        <div class="form-group">
                            <label>Unit Price</label>
                            <input type="number" name="UnitPrice" class="form-control" placeholder="Unit Price">
                        </div>
                        <div class="form-group">
                            <label>Unit In Stock</label>
                            <input type="number" name="UnitInStock" class="form-control" placeholder="Unit In Stock">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose A Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model)
                                {
                                    <option value="@item.ID">@item.CategoryName</option>
                                }
                            </select> 
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

